<link rel="stylesheet" href="css/style.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<div style="display: flex;">
    <ul class="list_user" style="display: none;">
        <%  accounts.forEach(account => { %>

            <li>
                <div>
                    Username: <p><%= account.username %></p>
                </div>
                <div>
                    FullName: <p><%= account.full_name %></p>
                </div>
            </li> 

        <% }) %>
        
    </ul>

    <div class="container">
        <div class="container_join"> 
            <input type="text" id="room" placeholder="room">
            <button id="btn_join">Join</button>
        </div> 
        
        <ul id="ul_message">
            <li>
                <span>tin nhắn</span>
                <i onclick="show(event)" class="choose_emotion fa-regular fa-face-smile" style="color: #f5ed00;"></i> 
            </li>
            <li>
                <span>tin nhắn1</span>
                <i onclick="show(event)" class="choose_emotion fa-regular fa-face-smile" style="color: #f5ed00;"></i> 
            </li>
            <li class="right">
                <span>tin nhắn2</span>
                <i onclick="show(event)" class="choose_emotion fa-regular fa-face-smile" style="color: #f5ed00;"></i> 
            </li>
            <li>
                <span>tin nhắn3</span>
                <i onclick="show(event)" class="choose_emotion fa-regular fa-face-smile" style="color: #f5ed00;"></i> 
            </li>
             
        </ul>

        <div class="container_send">
            <input type="text" id="ip_message" placeholder="message">
            <button id="btn_send">Gửi</button>
        </div>
    </div>

</div>

<script src="/socket.io/socket.io.js"></script>
<script src="js/client.js"></script>